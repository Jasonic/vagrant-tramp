#!/bin/bash

if [ "$(uname -s)" == "Darwin" ]
then
  type="fusion"
  PATH="/Applications/VMware Fusion.app/Contents/Library:$PATH"
else
  type="ws"
fi

function vm_dir() {
  dir=$(dirname $(dirname $1))

  while [ "$dir" != "/" ]
  do
    if [ -e "$dir/Vagrantfile" ]
    then
      echo $dir
      break
    fi
    dir=$(dirname $dir)
  done
}

function vm_name() {
  path=$1
  # extract $name from: /.../.vagrant/machines/$name/provider/uuid/box.vmx
  for _ in {1..3}
  do
    path=$(dirname $path)
  done
  basename $path
}

function vm_list() {
  dir=$(basename $1)
  name=$2

  if [ "$name" == "default" ]
  then
    echo $dir
  else
    echo "$dir-$name"
  fi
}

function vm_ssh() {
  dir=$1
  name=$2
  box_name=$(basename $dir)

  if [[ "$vm_name" == "$box_name-$name" ]] ||
     [[ "$vm_name" == "$box_name" && "$name" == "default" ]]
  then
    cd $dir
    exec "vagrant" "ssh" "$name"
  fi
}

if [ "$1" == "" ]
then
  vm_func=vm_list
else
  vm_func=vm_ssh
  vm_name=$1
fi

for vmx in $(vmrun -T $type list | grep -v ^Total)
do
  dir=$(vm_dir $vmx)

  if [ "$dir" != "" ]
  then
    $vm_func $dir $(vm_name $vmx)
  fi
done
